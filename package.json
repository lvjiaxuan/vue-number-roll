{
  "name": "vue3-number-roll",
  "version": "0.0.2-0",
  "private": false,
  "scripts": {
    "dev": "vite",
    "build:lib": "vite build --config vite.config.lib.ts",
    "build": "vite build",
    "serve": "vite preview",
    "lint": "eslint --ext .ts,.vue src",
    "cz": "git add . && git-cz",
    "ci": "npm ci && npm run build"
  },
  "description": "Vue3 数字滚动组件",
  "keywords": [
    "vue3",
    "number",
    "roll",
    "script setup",
    "vite",
    "@vue/composition-api"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "exports": {
    ".": {
      "import": "./dist/my-lib.es.js",
      "require": "./dist/my-lib.umd.js"
    }
  },
  "browserslist": "last 2 versions, > 1%, not dead",
  "author": "lvjiaxuan",
  "email": "471501748@qq.com",
  "homepage": "https://github.com/lvjiaxuan/vue-number-roll#vue-number-roll",
  "repository": {
    "type": "git",
    "url": "https://github.com/lvjiaxuan/vue-number-roll"
  },
  "publishConfig": {
    "tag": "latest",
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "license": "MIT",
  "dependencies": {
    "vue": "^3.2.31"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@typescript-eslint/parser": "^5.13.0",
    "@vitejs/plugin-vue": "^2.2.4",
    "@vue/compiler-sfc": "^3.2.31",
    "commitizen": "^4.2.4",
    "eslint": "^8.10.0",
    "eslint-plugin-vue": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "sass": "^1.49.9",
    "typescript": "^4.6.2",
    "vite": "^2.8.6",
    "vue-tsc": "^0.32.1"
  },
  "lint-staged": {
    "*": "prettier -w -u",
    "*.{vue,js}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "./.cz-simple"
    }
  }
}
