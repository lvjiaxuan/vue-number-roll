{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "strictNullChecks": true,
    "types": ["vite/client"],
    "declaration": true,
    "noImplicitAny": true,
    "allowJs": true
  },
  "vueCompilerOptions": {
    "experimentalCompatMode": 2
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
